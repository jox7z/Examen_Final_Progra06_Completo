@model IEnumerable<Examen_Final_Progra06_Interfaz.Models.mDepartments>

@{
    ViewData["Title"] = "obtenerDepartamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Listado de Departamentos</h1>

<p>
    <a asp-action="agregaDepartamento" class="btn btn-primary">Nuevo Departamento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GroupName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedDate)
            </td>
            <td>
                    @Html.ActionLink("Actualizar", "modificaDepartamento", new { pIdDepartment = item.DepartmentId }) |
                    @Html.ActionLink("Detalle", "detalleDepartamento", new { pIdDepartment = item.DepartmentId }) |
                    @Html.ActionLink("Eliminar", "eliminaDepartamento", new { pIdDepartment = item.DepartmentId })
            </td>
        </tr>
}
    </tbody>
</table>
